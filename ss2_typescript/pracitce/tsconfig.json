{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}